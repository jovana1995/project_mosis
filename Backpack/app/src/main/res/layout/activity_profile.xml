<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_gradient_yellow_linear_1920x1080_c2_ffffe0_006400_a_285_f_14"
    tools:context=".activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/pic1"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:contentDescription="@string/england" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anne_smith"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="32sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/web_sajt_restorana"
                android:src="@drawable/ic_action_phone_end" />

            <TextView
                android:id="@+id/tw_event_when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/_222_202_202"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/web_sajt_restorana"
                android:src="@drawable/ic_action_gmail" />

            <TextView
                android:id="@+id/tw_event_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/mail_anne"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_white">

            <ImageView
                android:id="@+id/iw_places_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_add"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:scrollbars="none"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/recycler_view_profile_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

        <android.support.v7.widget.RecyclerView
            android:scrollbars="none"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/recycler_view_profile_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

        <android.support.v7.widget.RecyclerView
            android:scrollbars="none"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/recycler_view_profile_new_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

    </LinearLayout>

</ScrollView>